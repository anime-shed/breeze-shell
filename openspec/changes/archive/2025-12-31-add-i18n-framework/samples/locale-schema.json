{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "breeze-shell-locale-schema",
    "title": "Breeze Shell Locale File",
    "description": "Schema for Breeze Shell internationalization locale files",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "description": "Reference to this schema file"
        },
        "$metadata": {
            "type": "object",
            "description": "Metadata about this locale file",
            "properties": {
                "language": {
                    "type": "string",
                    "description": "BCP 47 language tag (e.g., 'en-US', 'zh-CN')",
                    "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
                },
                "name": {
                    "type": "string",
                    "description": "Human-readable name of the language"
                },
                "version": {
                    "type": "string",
                    "description": "Semantic version of the locale file",
                    "pattern": "^\\d+\\.\\d+\\.\\d+$"
                },
                "contributors": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "List of contributors to this locale"
                }
            },
            "required": [
                "language",
                "name",
                "version"
            ]
        }
    },
    "additionalProperties": {
        "type": "string",
        "description": "Translation key-value pairs. Keys use dot notation (e.g., 'settings.title'). Values may contain interpolation placeholders in the format {variableName}."
    },
    "required": [
        "$metadata"
    ]
}